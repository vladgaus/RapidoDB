# RocksDB Benchmark Dockerfile
FROM ubuntu:22.04

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    libgflags-dev \
    libsnappy-dev \
    zlib1g-dev \
    libbz2-dev \
    liblz4-dev \
    libzstd-dev \
    && rm -rf /var/lib/apt/lists/*

# Clone and build RocksDB (release mode for accurate benchmarks)
RUN git clone --depth 1 --branch v8.10.0 https://github.com/facebook/rocksdb.git /rocksdb && \
    cd /rocksdb && \
    DEBUG_LEVEL=0 PORTABLE=1 make db_bench -j$(nproc)

WORKDIR /rocksdb

CMD ["./db_bench"]
